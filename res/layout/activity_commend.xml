<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".commendActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#87CEEB"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="'여행을 추천해 드립니다'"
        android:background="#87CEEB"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="조건을 선택하세요"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#E1F6FA"
        android:padding="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="누구와"
                android:background="#87CEEB"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="무엇을"
                android:background="#87CEEB"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="어떻게"
                android:background="#87CEEB"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="얼마나"
                android:background="#87CEEB"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radio_who"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/couple_btn"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="연인과"
                    android:fontFamily="@font/cafe24simplehae"
                    android:background="@drawable/selector_radio_button"
                    android:button="@null"
                    android:textColor="@drawable/selector_radio_text"/>
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/family_btn"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="가족과"
                    android:fontFamily="@font/cafe24simplehae"
                    android:background="@drawable/selector_radio_button"
                    android:button="@null"
                    android:textColor="@drawable/selector_radio_text"/>
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/friends_btn"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="친구와"
                    android:fontFamily="@font/cafe24simplehae"
                    android:background="@drawable/selector_radio_button"
                    android:button="@null"
                    android:textColor="@drawable/selector_radio_text"/>
            </RadioGroup>

            <RadioGroup
                android:id="@+id/radio_what"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/healing_btn"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="힐링"
                    android:fontFamily="@font/cafe24simplehae"
                    android:background="@drawable/selector_radio_button"
                    android:button="@null"
                    android:textColor="@drawable/selector_radio_text"/>
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/drive_btn"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="드라이브"
                    android:fontFamily="@font/cafe24simplehae"
                    android:background="@drawable/selector_radio_button"
                    android:button="@null"
                    android:textColor="@drawable/selector_radio_text"/>
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/foodfighter_btn"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="식도락"
                    android:fontFamily="@font/cafe24simplehae"
                    android:background="@drawable/selector_radio_button"
                    android:button="@null"
                    android:textColor="@drawable/selector_radio_text"/>
            </RadioGroup>

            <RadioGroup
                android:id="@+id/radio_how"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/car_btn"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="자차"
                    android:fontFamily="@font/cafe24simplehae"
                    android:background="@drawable/selector_radio_button"
                    android:button="@null"
                    android:textColor="@drawable/selector_radio_text"/>
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/bus_btn"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="대중교통"
                    android:fontFamily="@font/cafe24simplehae"
                    android:background="@drawable/selector_radio_button"
                    android:button="@null"
                    android:textColor="@drawable/selector_radio_text"/>
            </RadioGroup>

            <RadioGroup
                android:id="@+id/radio_time"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/in_4"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="~4시간"
                    android:fontFamily="@font/cafe24simplehae"
                    android:background="@drawable/selector_radio_button"
                    android:button="@null"
                    android:textColor="@drawable/selector_radio_text"/>
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/in_8"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="~8시간"
                    android:fontFamily="@font/cafe24simplehae"
                    android:background="@drawable/selector_radio_button"
                    android:button="@null"
                    android:textColor="@drawable/selector_radio_text"/>
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/in_12"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="~12시간"
                    android:fontFamily="@font/cafe24simplehae"
                    android:background="@drawable/selector_radio_button"
                    android:button="@null"
                    android:textColor="@drawable/selector_radio_text"/>
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/in_24"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="하루종일"
                    android:fontFamily="@font/cafe24simplehae"
                    android:background="@drawable/selector_radio_button"
                    android:button="@null"
                    android:textColor="@drawable/selector_radio_text"/>
            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

    <android.widget.Button
        android:id="@+id/commend_start"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="추천 시작하기"
        android:textSize="10dp"
        android:background="@drawable/button_shape"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommend_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp">
        </androidx.recyclerview.widget.RecyclerView>

        <android.widget.Button
            android:id="@+id/commend_add"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.1"
            android:layout_marginBottom="10dp"
            android:text="일정에 추가하기"
            android:textSize="10dp"
            android:visibility="gone"
            android:background="@drawable/button_shape"/>
    </LinearLayout>

</LinearLayout>